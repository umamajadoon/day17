#include <iostream>
using namespace std;

bool even(int n);

int main() {
    int num = 4;
    if (even(num))
        cout << num << " is even." << endl;
    else
        cout << num << " is not even." << endl;

    num = 5;
    if (even(num))
        cout << num << " is even." << endl;
    else
        cout << num << " is not even." << endl;

    return 0;
}

bool even(int n) {
    return (n % 2 == 0);
}